<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".presentation.ProfileActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <activity
            android:name=".presentation.DashboardActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.viewTransaction"
            android:exported="true"
            android:label="@string/app_name">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="comp3350.inba.presentation.DashboardActivity" />
        </activity>

        <activity
            android:name=".presentation.StudentsActivity"
            android:label="@string/title_activity_students">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="comp3350.inba.presentation.DashboardActivity" />
        </activity>
        <activity
            android:name=".presentation.StudentCoursesActivity"
            android:label="@string/title_activity_student_courses">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="comp3350.inba.presentation.StudentsActivity" />
        </activity>
        <activity
            android:name=".presentation.CoursesActivity"
            android:label="@string/title_activity_courses">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="comp3350.inba.presentation.DashboardActivity" />
        </activity>
        <activity
            android:name=".presentation.CourseStudentsActivity"
            android:label="@string/title_activity_course_students">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="comp3350.inba.presentation.CoursesActivity" />
        </activity>
        <activity
            android:name=".presentation.TransactionsActivity"
            android:label="@string/title_activity_transactions"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="comp3350.inba.presentation.DashboardActivity" />
        </activity>
    </application>

</manifest>